<p id="notice"><%= notice %></p>

<h1>Livros</h1>

<%= search_form_for @q do |f| %>

  <%= f.label :name_cont, "Título:" %>
  <%= f.search_field :name_cont, class: "form-control" %>
  <%= f.label :author_name_cont, "Autor:" %> 
  <%= f.search_field :author_name_cont, class: "form-control" %>
  <br>
  <%= f.submit %>

<% end %>


<table class="table">
  <thead>
    <tr>
      <th>Título</th>
      <th>Estoque</th>
      <th>Autor</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.stock %></td>
        <td><%= book.author.name %></td>
        <td><%= book.category.name %></td>
        <td><%= link_to 'Mostrar', book %></td>
        <td><%= link_to 'Editar', edit_book_path(book) %></td>
        <td><%= link_to 'Excluir', book, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Livro', new_book_path %>
