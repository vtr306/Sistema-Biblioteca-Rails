<p id="notice"><%= notice %></p>

<h1>Bibliotecários</h1>

<table class="table">
  <thead>
    <tr>
      <th>E-mail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @librarians.each do |librarian| %>
      <tr>
        <td><%= librarian.email %></td>
        <td><%= link_to 'Mostrar', librarian %></td>
        <td><%= link_to 'Editar', edit_librarian_path(librarian) %></td>
        <td><%= link_to 'Excluir', librarian, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

